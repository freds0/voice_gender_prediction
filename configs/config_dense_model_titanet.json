{
    "name": "dense_model_with_titanet",
    "n_gpu": 1,

    "arch": {
        "type": "EmbeddingDenseModel",
        "args": {
            "input_dim": 192
        }
    },
    "data_loader": {
        "type": "EmbeddingsDataloader",
        "args":{
            "data_dir": "./embeddings/voxceleb_gender_titanet/",
            "metadata_file": "train.csv",
            "val_metadata_file": "test.csv",
            "emb_dir": "",
            "train_batch_size": 64,
            "val_batch_size": 64,
            "shuffle": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "bce_loss",
    "metrics": [
        "accuracy", "recall", "precision", "f1_score"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 100,
            "gamma": 0.01
        }
    },
    "trainer": {
        "save_dir": "checkpoints",
        "n_checkpoints": 2,
        "log_dir": "logs",
        "log_step": 10,
        "save_period": 1,
        "verbosity": 2,
        "monitor": "max|accuracy",
        "early_stop": 10,
        "epochs": 500,
        "tensorboard": true
    }
}
